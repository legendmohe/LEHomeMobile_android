<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".activity.NFCDetectDialog"
    android:orientation="vertical"
    android:background="@drawable/msg_btn_bg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nfc_detecting_tag"
        android:id="@+id/nfc_detect_title"
        android:layout_margin="2dp"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_cancel"
        android:id="@+id/nfc_detect_button"
        android:layout_margin="4dp"
        android:layout_gravity="center"/>
</LinearLayout>
